<h2> <%= @beer %> </h2>

<p>
  <strong>Style:</strong>
  <%= @beer.style.name %>
</p>

<p>
<% if @beer.ratings.empty? %>
  Beer has not been rated
<% else %>
  Has <%= pluralize(@beer.ratings.count, 'rating') %>, average: <%= @beer.average_rating %>
<% end %>

</p>
<% if current_user %>
  <h4> Give a rating: </h4>
  <%= form_for(@rating) do |f| %>
    <%= f.hidden_field :beer_id %>
    score: <%= f.number_field :score %>
    <%= f.submit class:"btn btn-success" %>
  <% end %>

  <%= link_to('Edit', edit_beer_path(@beer), class:"btn btn-primary") if current_user %>
  <%= link_to('Destroy', @beer, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger") if current_user %>
<% end %>
