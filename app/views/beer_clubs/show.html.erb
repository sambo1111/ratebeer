<p id="notice"><%= notice %></p>

<h1>
  <%= @beer_club.name %>
</h1>

<p>
  founded in <%= @beer_club.founded %>
</p>

<h2> Members </h2>

<ul>

  <% @beer_club.members.each do |member| %>
    <li> <%= link_to member.username, member %> </li>
  <% end %>

</ul>
<% if current_user and current_user.beer_clubs.exclude?(@beer_club) %> <!-- Join club button -->
  <%= form_for(@membership) do |f| %>
    <%= f.hidden_field :beer_club_id %>
    <%= f.submit value: "join the club" %>
  <% end %>
  <%= link_to('Edit', edit_beer_club_path(@beer_club)) if current_user %> |
<% elsif current_user and current_user.beer_clubs.include?(@beer_club)%> <!-- leave club button -->
<%= form_for(@membership, method: "delete") do |f| %>
    <%= f.hidden_field :beer_club_id %>
    <%= f.submit value: "end the membership" %>
  <% end %>
  <%= link_to('Edit', edit_beer_club_path(@beer_club)) if current_user %> |
<% end %>

<%= link_to 'Back', beer_clubs_path %>
